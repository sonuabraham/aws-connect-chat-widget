# AWS Connect Chat Widget Environment Configuration
# Copy this file to .env and update with your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Staging Environment
STAGING_S3_BUCKET=aws-connect-widget-staging
STAGING_CLOUDFRONT_DISTRIBUTION_ID=E1234567890ABC
STAGING_DOMAIN=staging-cdn.example.com
STAGING_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
STAGING_GA_TRACKING_ID=GA_TRACKING_ID
STAGING_ANALYTICS_ENDPOINT=https://analytics.example.com/api/events

# Production Environment
PRODUCTION_S3_BUCKET=aws-connect-widget-production
PRODUCTION_CLOUDFRONT_DISTRIBUTION_ID=E0987654321XYZ
PRODUCTION_DOMAIN=cdn.example.com
PRODUCTION_SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
PRODUCTION_GA_TRACKING_ID=GA_TRACKING_ID
PRODUCTION_ANALYTICS_ENDPOINT=https://analytics.example.com/api/events

# Monitoring Configuration
MONITORING_ENDPOINT=https://monitoring.example.com/api/metrics
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
NOTIFICATION_EMAIL=alerts@example.com

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASS=your-smtp-password

# Analytics Configuration
GA_TRACKING_ID=GA_TRACKING_ID
ANALYTICS_API_KEY=your-analytics-api-key

# Feature Flags
DEBUG_MODE=false
PERFORMANCE_MONITORING=true
ERROR_REPORTING=true